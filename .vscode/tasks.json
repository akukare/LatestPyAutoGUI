{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Format Code",
            "type": "shell",
            "command": "${workspaceFolder}/venv/Scripts/black",
            "args": [
                "src",
                "tests"
            ],
            "problemMatcher": []
        },
        {
            "label": "Run Linter",
            "type": "shell",
            "command": "${workspaceFolder}/venv/Scripts/flake8",
            "args": [
                "src",
                "tests"
            ],
            "problemMatcher": [
                "$flake8"
            ]
        },
        {
            "label": "Run Tests",
            "type": "shell",
            "command": "${workspaceFolder}/venv/Scripts/pytest",
            "args": [
                "--html=reports/html/report.html",
                "--self-contained-html"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": []
        }
    ]
}